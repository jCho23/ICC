<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="ICC.Pages.SettingsPage"
    Padding= "0, 20, 0, 0">

    <TableView
        Intent= "Settings">

        <TableView.Root>
            <TableRoot>

                <TableSection
                    Title= "Security and Alerts" >

                    <SwitchCell   
                        Text= "Password"
                        On= "true" />

                    <SwitchCell
                        Text= "Enable Push Notifications"
                        On= "true" />
                </TableSection>

                <TableSection
                    Title= "Video">

                    <SwitchCell
                        Text= "Upload HD"
                        On= "true" />

                    <SwitchCell
                        Text= "Auto-play on Wi-Fi only"
                        On= "true" />
                </TableSection>

            </TableRoot>
        </TableView.Root>

    </TableView>
    
<!--    <StackLayout
        HorizontalOptions= "Center" VerticalOptions= "Center" >
            <Label 
                HorizontalOptions= "Center"
                Text= "Do More" />
              
    </StackLayout>-->
   
</ContentPage>
